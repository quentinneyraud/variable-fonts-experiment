html, body
  margin 0
  padding 0
  overflow hidden
  background-color #0e1111

@font-face
  font-family Compressa
  font-style normal
  font-weight 400
  src url('Compressa.ttf') format('truetype')

.project-section
  position relative
  height 100vh
  width 100%


  .img-wrapper
    position absolute
    top 100px
    left 100px
    width calc(100vw - 200px)
    height calc(100vh - 200px)

    img
      width 100%
      height 100%
      object-fit cover

  h2
    white-space nowrap
    margin 0
    padding 0
    display inline-block
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)

    span
      color white
      font-size 400px
      line-height 1.1em
      font-family Compressa
      font-variation-settings 'wght' calc(var(--wght) * var(--ratio)), 'wdth' calc(var(--wdth) * var(--ratio))
      --wdth: 10
      --ratio: 1
      --wght: 100
